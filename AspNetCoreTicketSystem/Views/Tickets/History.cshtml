@model IEnumerable<AspNetCoreTicketSystem.Models.TicketSystem>

@{
    ViewData["Title"] = "Ticket History";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Updated At</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
                <tr>
                    <td colspan="4">No tickets available.</td>
                </tr>
        }
        else
        {
            @foreach (var ticket in Model)
            {
                        <tr>
                            <td>@ticket.Title</td>
                            <td>@ticket.Status</td>
                            <td>@ticket.CreatedAt.ToString("g")</td>
                            <td>@ticket.UpdatedAt.ToString("g")</td>
                        </tr>
            }
        }
    </tbody>
</table>
