@model IEnumerable<AspNetCoreTicketSystem.Models.TicketSystem>

<h2>Active Tickets</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Ticket</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
                <tr>
                    <td>@ticket.Title</td>
                    <td>@ticket.Status</td>
                    <td>@ticket.CreatedAt.ToString("g")</td>
                    <td>@ticket.UpdatedAt.ToString("g")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@ticket.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
