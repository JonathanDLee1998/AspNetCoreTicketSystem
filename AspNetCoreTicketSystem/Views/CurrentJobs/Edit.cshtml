@model AspNetCoreTicketSystem.Models.CurrentJobViewModel

@{
    ViewData["Title"] = "Edit Job Status";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control" asp-items="Model.StatusOptions">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" readonly></textarea>
    </div>
    <div class="form-group">
        <label asp-for="CreatedAt" class="control-label"></label>
        <input asp-for="CreatedAt" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="TimeToComplete" class="control-label"></label>
        <input asp-for="TimeToComplete" class="form-control" readonly />
    </div>
        <div class="form-group" style="margin-top: 20px;">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
